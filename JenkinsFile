pipeline {
    agent any

    stages {
        stage('BuildNew1') {
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }    
            steps {
                sh '''
                    ls -la
                    node --version
                    npm --version
                    echo "Start Build APP"
                    npm ci
                    npm run build
                '''
            }
        }
        stage('Test') {
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
                sh '''
                    ls -la
                    test -f build/index.html
                    echo "Start Testing"
                    npm test
                '''
            }
        }
    }
    post {
		always {
			junit ‘test-results/junit.xml’
		}
	}
}
