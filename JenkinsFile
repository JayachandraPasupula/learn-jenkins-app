pipeline {
    agent any

    stages {
        stage('BuildNew') {
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }    
            steps {
                sh '''
                    ls -la
                    node --version
                    npm --version
                    echo "Start Build APP"
                    npm ci
                    npm run build
                '''
            }
        }
    }
}
