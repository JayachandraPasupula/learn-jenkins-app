pipeline {
    agent any

    stages {
        stage('BuildNew1') {
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }    
            steps {
                sh '''
                    ls -la
                    node --version
                    npm --version
                    echo "Start Build APP"
                    npm ci
                    npm run build
                '''
            }
        }
        stage('Test') {
            steps {
                sh '''
                    ls -la
                    sh 'test -f build/index.html'
                    echo "Start Testing"
                '''
            }
        }
    }
}
