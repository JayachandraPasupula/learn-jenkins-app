pipeline {
    agent any

    environment {
		NETLIFY_SITE_ID = "02c0d667-9984-4e0d-a6d6-a7a43407b6c1"
    }

    stages {
        stage('BuildNew1') {
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }    
            steps {
                sh '''
                    ls -la
                    node --version
                    npm --version
                    echo "Start Build APP"
                    npm ci
                    npm run build
                '''
            }
        }
        stage('Test') {
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
                sh '''
                    ls -la
                    test -f build/index.html
                    echo "Start Testing"
                    npm test
                '''
            }
        }
	stage('Deploy') {
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
                sh '''
                    npm install netlify-cli
		    node_modules/.bin/netlify
		    echo "Deploy to production Site ID = $NETLIFY_SITE_ID "
                '''
            }
        }
    }
    post {
	always {
		junit '**/junit.xml'
		}
	}
}
