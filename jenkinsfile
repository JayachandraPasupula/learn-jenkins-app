pipeline {
    agent any

    stages {
        stage('Build') {
            agent {
                docker {
                    image 'node:22.13.1-alpine3.21'
                    reuseNode true
                }
            }
            steps {
                sh '''
                ls -al
                node --version
                npm --version
                npm ci
                npm run build
                ls -al
                '''
            }
        }
        stage('Test'){
            agent {
                docker {
                    image 'node:22.13.1-alpine3.21'
                    reuseNode true
                }
            }
            steps {
                sh '''
                if [ -f build/index.html ]; then
                    npm test
                else
                   echo 'not exit'
                fi
                '''
            }
        }

        stage('E2E'){
            agent {
                docker {
                    image 'mcr.microsoft.com/playwright:v1.50.0-noble'
                    reuseNode true
                }
            }
            steps {
                sh '''
                npm install serve
                serve -s build
                npx playwright test
                '''
            }
        }


    }

    post {
        always {
            junit 'test-results/junit.xml'
        }
    }
}
