trigger:
  branches:
    include:
      - main

pool:
  vmImage: 'ubuntu-latest'

steps:
  - task: UsePythonVersion@0
    inputs:
      versionSpec: '3.x'
      addToPath: true

  - script: |
      python -m pip install --upgrade pip
      pip install locust
    displayName: 'Install Locust'

  # Locust Test ausf√ºhren
  - script: |
      locust -f locustfile.py --headless -u 10 -r 2 --run-time 1m --csv=locust_report --html=locust_report.html
    displayName: 'Run Locust Load Test'
  
  # Generiere den Bericht als Pipeline-Artefakt
  - task: PublishPipelineArtifact@1
    inputs:
      targetPath: '$(Build.SourcesDirectory)/locust_report.html'
      artifact: 'LocustReport'
    displayName: 'Publish Locust HTML Report'

  # Optional: Speichere den CSV-Bericht auch als Artefakt
  - task: PublishPipelineArtifact@1
    inputs:
      targetPath: '$(Build.SourcesDirectory)/locust_report_stats.csv'
      artifact: 'LocustCSVReport'
    displayName: 'Publish Locust CSV Report'
