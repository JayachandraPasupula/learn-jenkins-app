pipeline {
    agent any

    stages {
        stage('Build') {
            agent {
                docker {
                    image 'node:22.13.1-alpine3.21'
                    reuseNode true
                }
            }
            steps {
                sh '''
                ls -al
                node --version
                npm --version
                npm ci
                npm run build
                ls -al
                '''
            }
        }
        stage('Test'){
            steps{
                sh '''
                if [ -f build/index.html ]; then
                    npm test
                else
                   echo 'not exit'
                fi
                '''
            }
        }
    }
}
